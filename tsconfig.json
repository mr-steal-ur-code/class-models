{
	"compilerOptions": {
		"target": "ES2015",
		"useDefineForClassFields": true,
		"module": "CommonJS",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": "src",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
